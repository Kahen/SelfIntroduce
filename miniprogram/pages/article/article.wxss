.article-cover {
  position: relative;
  height: 460rpx;
}
.article-cover image {
  display: block;
  width: 100%;
  height: 100%;
}
.article-content {
  margin: 20rpx 20rpx 20rpx 20rpx;
  line-height: 65rpx;
}
.img {
  width: 100%;
}
.title-warp {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 30rpx 40rpx;
  width: 100%;
  background: -webkit-gradient(linear, 0 0, 0 bottom, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.5)));
}
.title-warp .classify {
  font-size: 36rpx;
  color: #fff;
  display: block;
  opacity: 0.8;
}
.title-warp .title {
  font-size: 46rpx;
  display: block;
  color: #fff;
  font-weight: bold;
}
